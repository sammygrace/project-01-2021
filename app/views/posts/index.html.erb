<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Posted</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, user_post_path(post.user, post) %></td>
        <td class="text-preview">
          <%= post.content %>
        </td>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <td><%= link_to post.user.name, user_path(post.user) %></td>
        <td style="<%= hidden_if_unauthorized_to_manage(post) %>">
          <%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'are you sure?' } %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div style="<%= hidden_if_unauthorized_to_manage(@user) %>">
  <%= link_to "New Post", new_user_post_path(current_user) %>
</div>
