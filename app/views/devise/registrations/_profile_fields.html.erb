<div class="field">
  <%= form.label :name %><br />
  <%= form.text_field :name, autofocus: true %>
</div>

<div class="field">
  <%= form.label :photo %><br />
  <%= form.file_field :photo %>
  <% user.photo.attach(params[:photo]) %>

  <%= image_tag user.photo.variant if user.photo.attached? %>
</div>

<div class="field">
  <%= form.label :description %><br />
  <%= form.text_area :description %>
</div>
